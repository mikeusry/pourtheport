---
import Layout from '../../layouts/Layout.astro';
import SEO from '../../components/SEO.astro';

const title = "Pour the PORT Blog | Septic Tank Treatment & Maintenance Tips";
const description = "Expert advice on septic tank maintenance, natural septic treatments, and eco-friendly septic system care. Learn from trusted septic professionals.";
const keywords = "septic tank blog, septic maintenance tips, natural septic treatment advice, septic system care, eco-friendly septic solutions";

// Future blog posts - ready for content creation
const blogPosts = [
  {
    title: "Complete Septic Tank Maintenance Guide",
    excerpt: "Learn everything you need to know about maintaining your septic system for optimal performance and longevity.",
    slug: "septic-tank-maintenance-guide",
    category: "Maintenance",
    readTime: "8 min read",
    featured: true
  },
  {
    title: "Natural vs Chemical Septic Treatments: Which is Better?",
    excerpt: "Compare natural bacterial treatments with chemical additives to understand which option is best for your septic system.",
    slug: "natural-vs-chemical-septic-treatments",
    category: "Treatments",
    readTime: "6 min read",
    featured: true
  },
  {
    title: "RV Septic Tank Treatment Guide",
    excerpt: "Essential tips for maintaining your RV's septic system with safe, effective natural treatments.",
    slug: "rv-septic-tank-treatment-guide",
    category: "RV Care",
    readTime: "5 min read",
    featured: false
  },
  {
    title: "The Science Behind Septic Tank Bacteria",
    excerpt: "Understand how beneficial bacteria work in your septic system and why they're essential for proper waste breakdown.",
    slug: "septic-tank-bacteria-science",
    category: "Science",
    readTime: "7 min read",
    featured: false
  },
  {
    title: "Drain Field Protection Tips",
    excerpt: "Protect your septic drain field from costly damage with these expert maintenance tips and warning signs to watch for.",
    slug: "drain-field-protection-tips",
    category: "Maintenance",
    readTime: "6 min read",
    featured: false
  },
  {
    title: "Septic System Troubleshooting Guide",
    excerpt: "Identify and resolve common septic system problems before they become expensive repairs.",
    slug: "septic-system-troubleshooting",
    category: "Troubleshooting",
    readTime: "9 min read",
    featured: false
  }
];
---

<Layout>
  <SEO
    slot="head"
    title={title}
    description={description}
    keywords={keywords}
    schemaType="WebPage"
  />

  <main class="min-h-screen bg-gradient-to-br from-gray-50 to-white">
    <!-- Hero Section -->
    <section class="py-20 bg-gradient-to-r from-brand-primary-green to-brand-secondary-blue text-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">
            Septic Care Expertise
          </h1>
          <p class="text-xl md:text-2xl text-green-100 mb-8">
            Expert advice on natural septic tank treatments, maintenance tips, and eco-friendly solutions for optimal septic system health.
          </p>
          <div class="flex justify-center">
            <div class="bg-white/10 backdrop-blur-sm rounded-lg px-6 py-3 border border-white/20">
              <span class="text-brand-accent-orange font-semibold">Coming Soon</span>
              <span class="text-white/90 ml-2">• Expert Articles & Guides</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Blog Posts Grid -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">

          <!-- Featured Posts -->
          <div class="mb-16">
            <h2 class="text-3xl font-bold text-brand-neutral-dark mb-8 text-center">Featured Articles</h2>
            <div class="grid md:grid-cols-2 gap-8">
              {blogPosts.filter(post => post.featured).map(post => (
                <article class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                  <div class="p-8">
                    <div class="flex items-center justify-between mb-4">
                      <span class="bg-brand-primary-green text-white px-3 py-1 rounded-full text-sm font-medium">
                        {post.category}
                      </span>
                      <span class="text-gray-500 text-sm">{post.readTime}</span>
                    </div>
                    <h3 class="text-xl font-bold text-brand-neutral-dark mb-3 leading-tight">
                      {post.title}
                    </h3>
                    <p class="text-gray-600 mb-6 leading-relaxed">
                      {post.excerpt}
                    </p>
                    <div class="flex items-center justify-between">
                      <button class="bg-brand-accent-orange/10 text-brand-accent-orange px-4 py-2 rounded-lg font-medium hover:bg-brand-accent-orange hover:text-white transition-all duration-300 cursor-not-allowed opacity-60">
                        Coming Soon
                      </button>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          </div>

          <!-- All Articles -->
          <div>
            <h2 class="text-3xl font-bold text-brand-neutral-dark mb-8 text-center">All Articles</h2>
            <div class="grid md:grid-cols-3 gap-8">
              {blogPosts.filter(post => !post.featured).map(post => (
                <article class="bg-white rounded-lg shadow-md border border-gray-100 overflow-hidden hover:shadow-lg transition-all duration-300">
                  <div class="p-6">
                    <div class="flex items-center justify-between mb-4">
                      <span class="bg-brand-secondary-blue text-white px-3 py-1 rounded-full text-sm font-medium">
                        {post.category}
                      </span>
                      <span class="text-gray-500 text-sm">{post.readTime}</span>
                    </div>
                    <h3 class="text-lg font-bold text-brand-neutral-dark mb-3 leading-tight">
                      {post.title}
                    </h3>
                    <p class="text-gray-600 mb-4 text-sm leading-relaxed">
                      {post.excerpt}
                    </p>
                    <button class="text-brand-primary-green font-medium hover:text-brand-accent-orange transition-colors duration-300 cursor-not-allowed opacity-60">
                      Coming Soon →
                    </button>
                  </div>
                </article>
              ))}
            </div>
          </div>

          <!-- Newsletter Signup -->
          <div class="mt-16 bg-gradient-to-r from-brand-primary-green to-brand-secondary-blue rounded-2xl p-8 text-white text-center">
            <h3 class="text-2xl font-bold mb-4">Stay Updated</h3>
            <p class="text-green-100 mb-6 max-w-2xl mx-auto">
              Be the first to know when our expert septic care articles are published. Get maintenance tips, treatment guides, and eco-friendly solutions delivered to your inbox.
            </p>
            <div class="max-w-md mx-auto">
              <button class="bg-white text-brand-primary-green px-8 py-3 rounded-full font-bold hover:bg-gray-100 transition-colors duration-300 cursor-not-allowed opacity-60">
                Newsletter Coming Soon
              </button>
            </div>
          </div>

        </div>
      </div>
    </section>
  </main>
</Layout>