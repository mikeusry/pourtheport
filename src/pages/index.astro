---
import HeroWithCloudinary from '../components/HeroWithCloudinary.astro';
import PainPoints from '../components/PainPoints.astro';
import Solution from '../components/Solution.astro';
import ScientificBenefits from '../components/ScientificBenefits.astro';
import TrustLogos from '../components/TrustLogos.astro';
import KlaviyoReviews from '../components/KlaviyoReviews.astro';
import HowItWorks from '../components/HowItWorks.astro';
import Pricing from '../components/Pricing.astro';
import FAQ from '../components/FAQ.astro';
import StickyCAT from '../components/StickyCAT.astro';
import GoogleAnalytics from '../components/GoogleAnalytics.astro';
import ConversionTracking from '../components/ConversionTracking.astro';
import '../styles/global.css';

const title = "Pour the PORT - Prevent $15,000 Septic Disasters for $84/Year";
const description = "USDA Certified Biobased速 septic treatment prevents $15K disasters for $84/year. Natural bacterial protection. Just 3 applications annually.";
const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://www.pourtheport.com');
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content="septic tank treatment, septic system maintenance, USDA certified biobased, natural septic treatment, septic bacteria, prevent septic failure, septic disaster prevention" />
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="https://res.cloudinary.com/southland-organics/image/upload/w_1200,h_630,c_fill,q_auto/pour-the-port/septic_l9n82v" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:site_name" content="Pour the PORT" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content="https://res.cloudinary.com/southland-organics/image/upload/w_1200,h_630,c_fill,q_auto/pour-the-port/septic_l9n82v" />
		
		<!-- Additional Meta -->
		<meta name="robots" content="index, follow" />
		<meta name="author" content="Pour the PORT" />
		<meta name="theme-color" content="#22c55e" />
		
		<!-- Preload Critical Resources -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		
		<!-- Schema Markup for Product -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "Product",
			"name": "Pour the PORT Septic Tank Treatment",
			"description": "USDA Certified Biobased速 natural bacterial treatment for septic systems. Prevents costly failures with 3 simple applications per year.",
			"brand": {
				"@type": "Brand",
				"name": "Pour the PORT"
			},
			"offers": {
				"@type": "Offer",
				"url": "https://pourtheport.com",
				"priceCurrency": "USD",
				"price": "84.00",
				"priceValidUntil": "2025-12-31",
				"availability": "https://schema.org/InStock",
				"seller": {
					"@type": "Organization",
					"name": "Pour the PORT"
				}
			},
			"aggregateRating": {
				"@type": "AggregateRating",
				"ratingValue": "4.8",
				"reviewCount": "127"
			},
			"features": [
				"USDA Certified Biobased速",
				"Trusted by National Parks",
				"Natural bacterial treatment",
				"Prevents system failures",
				"3 applications per year"
			]
		}
		</script>
		
		<!-- Schema Markup for FAQPage -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "FAQPage",
			"mainEntity": [
				{
					"@type": "Question",
					"name": "How does Pour the PORT prevent septic system failures?",
					"acceptedAnswer": {
						"@type": "Answer",
						"text": "Pour the PORT introduces billions of beneficial bacteria into your septic tank, restoring the natural biological balance needed for proper waste breakdown. This prevents the conditions that lead to backups, overflows, and system replacements."
					}
				},
				{
					"@type": "Question",
					"name": "Why do National Parks trust Pour the PORT?",
					"acceptedAnswer": {
						"@type": "Answer",
						"text": "Joshua Tree National Park and other protected environments have used Pour the PORT for over a decade because it meets the strictest environmental standards while delivering consistent results in critical facilities where failure is not an option."
					}
				},
				{
					"@type": "Question",
					"name": "Is Pour the PORT safe for families and the environment?",
					"acceptedAnswer": {
						"@type": "Answer",
						"text": "Yes, Pour the PORT is 100% natural bacteria with USDA Certified Biobased速 credentials. It's safe for children, pets, and the environment, with no harsh chemicals or toxic fumes."
					}
				}
			]
		}
		</script>
		
		<!-- Performance & Analytics -->
		<link rel="dns-prefetch" href="//fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
		
		<!-- Google Analytics 4 -->
		<GoogleAnalytics />
	</head>
	<body class="antialiased">
		<!-- Navigation Header -->
		<nav class="bg-white shadow-sm sticky top-0 z-50">
			<div class="container mx-auto px-4">
				<div class="flex justify-between items-center py-4">
					<a href="/" class="font-bold text-xl text-green-600 hover:text-green-700">
						Pour the PORT
					</a>
					<div class="hidden md:flex items-center space-x-6">
						<a href="/product" class="text-gray-600 hover:text-green-600 font-medium transition-colors">
							Product Details
						</a>
						<a href="/septic-tank-maintenance-guide" class="text-gray-600 hover:text-green-600 font-medium transition-colors">
							Maintenance Guide
						</a>
						<a href="#pricing" class="bg-green-500 hover:bg-green-600 text-white font-medium px-4 py-2 rounded-full transition-colors">
							Buy Now
						</a>
					</div>
					<!-- Mobile Menu Button -->
					<button id="mobile-menu-button" class="md:hidden text-gray-600 hover:text-green-600">
						<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
						</svg>
					</button>
				</div>
			</div>
			<!-- Mobile Menu -->
			<div id="mobile-menu" class="hidden md:hidden bg-white border-t">
				<div class="px-4 py-3 space-y-3">
					<a href="/product" class="block text-gray-600 hover:text-green-600 font-medium transition-colors">
						Product Details
					</a>
					<a href="/septic-tank-maintenance-guide" class="block text-gray-600 hover:text-green-600 font-medium transition-colors">
						Maintenance Guide
					</a>
					<a href="#pricing" class="block bg-green-500 hover:bg-green-600 text-white font-medium px-4 py-2 rounded-full text-center transition-colors">
						Buy Now
					</a>
				</div>
			</div>
		</nav>

		<!-- Main Content -->
		<main>
			<HeroWithCloudinary />
			<TrustLogos />
			<PainPoints />
			<Solution />
			<ScientificBenefits />
			<HowItWorks />
			<Pricing />
			<KlaviyoReviews />
			
			<!-- Expert Resources Section -->
			<section class="py-16 bg-gray-100">
				<div class="container mx-auto px-4">
					<div class="max-w-6xl mx-auto text-center">
						<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Expert Septic System Resources</h2>
						<p class="text-xl text-gray-600 mb-12 max-w-3xl mx-auto">
							Learn from the professionals. Our comprehensive guides help you understand, maintain, and protect your septic investment.
						</p>
						
						<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
							<a href="/septic-tank-maintenance-guide" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow group">
								<div class="text-green-500 mb-4">
									<svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
									</svg>
								</div>
								<h3 class="text-lg font-semibold text-gray-800 mb-2 group-hover:text-green-600">Maintenance Guide</h3>
								<p class="text-gray-600 text-sm">Complete septic system care schedule and professional tips</p>
							</a>
							
							<a href="/septic-system-problems" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow group">
								<div class="text-red-500 mb-4">
									<svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.98-.833-2.75 0L3.634 16.5C2.864 18.167 3.826 19 5.366 19z"></path>
									</svg>
								</div>
								<h3 class="text-lg font-semibold text-gray-800 mb-2 group-hover:text-red-600">Problem Solutions</h3>
								<p class="text-gray-600 text-sm">Identify and solve septic issues before they become expensive disasters</p>
							</a>
							
							<a href="/septic-treatment-vs-pumping" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow group">
								<div class="text-blue-500 mb-4">
									<svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
									</svg>
								</div>
								<h3 class="text-lg font-semibold text-gray-800 mb-2 group-hover:text-blue-600">Cost Comparison</h3>
								<p class="text-gray-600 text-sm">Honest analysis of treatment vs pumping costs and effectiveness</p>
							</a>
							
							<a href="/septic-tank-bacteria" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow group">
								<div class="text-purple-500 mb-4">
									<svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 8.172V5L8 4z"></path>
									</svg>
								</div>
								<h3 class="text-lg font-semibold text-gray-800 mb-2 group-hover:text-purple-600">Bacteria Science</h3>
								<p class="text-gray-600 text-sm">Understand how beneficial bacteria keep your septic system healthy</p>
							</a>
						</div>
					</div>
				</div>
			</section>
			
			<FAQ />
		</main>
		
		<!-- Sticky CTA -->
		<StickyCAT />
		
		<!-- Smooth Scrolling -->
		<style>
			html {
				scroll-behavior: smooth;
			}
			
			/* Custom scrollbar */
			::-webkit-scrollbar {
				width: 8px;
			}
			
			::-webkit-scrollbar-track {
				background: #f1f5f9;
			}
			
			::-webkit-scrollbar-thumb {
				background: #22c55e;
				border-radius: 4px;
			}
			
			::-webkit-scrollbar-thumb:hover {
				background: #16a34a;
			}
		</style>
		
		<!-- Mobile Menu JavaScript -->
		<script>
			document.addEventListener('DOMContentLoaded', function() {
				const mobileMenuButton = document.getElementById('mobile-menu-button');
				const mobileMenu = document.getElementById('mobile-menu');
				
				if (mobileMenuButton && mobileMenu) {
					mobileMenuButton.addEventListener('click', function() {
						mobileMenu.classList.toggle('hidden');
					});
				}
			});
		</script>
		
		<!-- Conversion Tracking -->
		<ConversionTracking />
	</body>
</html>
