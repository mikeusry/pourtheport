---
import HeroWithCloudinary from '../components/HeroWithCloudinary.astro';
import PainPoints from '../components/PainPoints.astro';
import Solution from '../components/Solution.astro';
import ScientificBenefits from '../components/ScientificBenefits.astro';
import TrustLogos from '../components/TrustLogos.astro';
import KlaviyoReviews from '../components/KlaviyoReviews.astro';
import HowItWorks from '../components/HowItWorks.astro';
import Pricing from '../components/Pricing.astro';
import FAQ from '../components/FAQ.astro';
import StickyCAT from '../components/StickyCAT.astro';
import GoogleAnalytics from '../components/GoogleAnalytics.astro';
import ConversionTracking from '../components/ConversionTracking.astro';
import '../styles/global.css';

const title = "Pour the PORT - Prevent $15,000 Septic Disasters for $84/Year";
const description = "USDA Certified Biobased® septic treatment prevents $15K+ disasters for just $84/year. Trusted by National Parks for 10+ years. Natural bacterial protection with only 3 applications annually. Order now and protect your investment.";
const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://www.pourtheport.com');
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content="septic tank treatment, septic system maintenance, USDA certified biobased, natural septic treatment, septic bacteria, prevent septic failure, septic disaster prevention" />
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="https://res.cloudinary.com/southland-organics/image/upload/w_1200,h_630,c_fill,q_auto/pour-the-port/septic_l9n82v" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:site_name" content="Pour the PORT" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
