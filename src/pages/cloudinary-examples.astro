---
/**
 * Cloudinary Integration Examples
 * 
 * TODO: REMOVE LATER - Development/testing page only
 * 
 * Comprehensive demonstration of all CloudinaryImage features,
 * specialized components, and integration patterns.
 */

import Layout from '../layouts/Layout.astro';
import CloudinaryImage from '../components/CloudinaryImage.astro';
import CloudinaryAvatar from '../components/CloudinaryAvatar.astro';
import CloudinaryHero from '../components/CloudinaryHero.astro';
import CloudinaryGallery from '../components/CloudinaryGallery.astro';

// Project images for demonstrations
const sampleImages = [
  {
    publicId: 'pour-the-port/Pour_the_Port_product',
    alt: 'Pour the PORT product',
    title: 'Pour the PORT Product',
    description: 'USDA Certified Biobased septic treatment packets',
    category: 'product'
  },
  {
    publicId: 'pour-the-port/logos/USDA_Certified_BioBased',
    alt: 'USDA Certified Biobased logo',
    title: 'USDA Certification',
    description: 'Official USDA Certified Biobased product badge',
    category: 'trust'
  },
  {
    publicId: 'pour-the-port/logos/national-parks-service',
    alt: 'National Parks Service logo',
    title: 'National Parks Service',
    description: 'Trusted by National Parks for 10+ years',
    category: 'trust'
  },
  {
    publicId: 'pour-the-port/logos/university-of-georgia',
    alt: 'University of Georgia logo',
    title: 'University of Georgia',
    description: 'Research backed by University of Georgia',
    category: 'trust'
  },
  {
    publicId: 'pour-the-port/septic_l9n82v',
    alt: 'Septic system background',
    title: 'Septic System',
    description: 'Professional septic system maintenance',
    category: 'background'
  },
  {
    publicId: 'pour-the-port/logos/forest-service',
    alt: 'Forest Service logo',
    title: 'US Forest Service',
    description: 'Endorsed by US Forest Service',
    category: 'trust'
  }
];
---

<Layout title="Cloudinary Integration Examples">
  <main class="bg-gray-50">
    <!-- Hero Section Example -->
    <CloudinaryHero
      publicId="pour-the-port/septic_l9n82v"
      alt="Septic system background"
      overlayOpacity={40}
      overlayGradient="linear-gradient(45deg, rgba(0,0,0,0.4), rgba(0,100,200,0.3))"
      contentAlign="center"
      minHeight="60vh"
      class="mb-16"
    >
      <div class="max-w-4xl mx-auto text-center text-white py-20">
        <h1 class="text-5xl font-bold mb-6">CloudinaryHero Component</h1>
        <p class="text-xl mb-8">Optimized hero sections with background images, overlays, and responsive design</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button class="bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
            Get Started
          </button>
          <button class="border-2 border-white text-white px-6 py-3 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition-colors">
            Learn More
          </button>
        </div>
      </div>
    </CloudinaryHero>

    <div class="container mx-auto px-4 py-16 max-w-7xl">
      
      <!-- Basic CloudinaryImage Examples -->
      <section class="mb-20">
        <h2 class="text-4xl font-bold text-gray-900 mb-8">Basic CloudinaryImage Usage</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
          
          <!-- Standard Image -->
          <div class="bg-white p-6 rounded-xl shadow-lg">
            <h3 class="text-xl font-semibold mb-4">Standard Image</h3>
            <CloudinaryImage
              publicId="pour-the-port/Pour_the_Port_product"
              alt="Pour the PORT product"
              width={400}
              height={300}
              class="rounded-lg mb-4"
            />
            <code class="text-sm bg-gray-100 p-2 rounded block overflow-x-auto">
              &lt;CloudinaryImage publicId="pour-the-port/Pour_the_Port_product" alt="Pour the PORT product" width={400} height={300} /&gt;
            </code>
          </div>
          
          <!-- Responsive Image -->
          <div class="bg-white p-6 rounded-xl shadow-lg">
            <h3 class="text-xl font-semibold mb-4">Responsive with Srcset</h3>
            <CloudinaryImage
              publicId="pour-the-port/logos/USDA_Certified_BioBased"
              alt="USDA Certified logo"
              width={400}
              height={300}
              responsive={true}
              sizes="(max-width: 768px) 100vw, 33vw"
              class="rounded-lg mb-4"
            />
            <code class="text-sm bg-gray-100 p-2 rounded block overflow-x-auto">
              responsive={true} sizes="(max-width: 768px) 100vw, 33vw"
            </code>
          </div>
          
          <!-- With Placeholder -->
          <div class="bg-white p-6 rounded-xl shadow-lg">
            <h3 class="text-xl font-semibold mb-4">Lazy Loading + Placeholder</h3>
            <CloudinaryImage
              publicId="pour-the-port/septic_l9n82v"
              alt="Septic background"
              width={400}
              height={300}
              loading="lazy"
              placeholder={true}
              class="rounded-lg mb-4"
            />
            <code class="text-sm bg-gray-100 p-2 rounded block overflow-x-auto">
              loading="lazy" placeholder={true}
            </code>
          </div>
          
        </div>
      </section>

      <!-- Advanced Effects Examples -->
      <section class="mb-20">
        <h2 class="text-4xl font-bold text-gray-900 mb-8">Advanced Effects & Transformations</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          
          <!-- Blur Effect -->
          <div class="bg-white p-4 rounded-xl shadow-lg">
            <h3 class="text-lg font-semibold mb-3">Blur Effect</h3>
            <CloudinaryImage
              publicId="pour-the-port/Pour_the_Port_product"
              alt="Product with blur effect"
              width={300}
              height={300}
              blur={200}
              crop="fill"
              class="rounded-lg mb-3"
            />
            <code class="text-xs bg-gray-100 p-1 rounded block">blur={200}</code>
          </div>
          
          <!-- Sepia Effect -->
          <div class="bg-white p-4 rounded-xl shadow-lg">
            <h3 class="text-lg font-semibold mb-3">Sepia Effect</h3>
            <CloudinaryImage
              publicId="pour-the-port/septic_l9n82v"
              alt="Background with sepia effect"
              width={300}
              height={300}
              sepia={80}
              crop="fill"
              class="rounded-lg mb-3"
            />
            <code class="text-xs bg-gray-100 p-1 rounded block">sepia={80}</code>
          </div>
          
          <!-- Grayscale -->
          <div class="bg-white p-4 rounded-xl shadow-lg">
            <h3 class="text-lg font-semibold mb-3">Grayscale</h3>
            <CloudinaryImage
              publicId="pour-the-port/Pour_the_Port_product"
              alt="Product with grayscale effect"
              width={300}
              height={300}
              grayscale={true}
              crop="fill"
              class="rounded-lg mb-3"
            />
            <code class="text-xs bg-gray-100 p-1 rounded block">grayscale={true}</code>
          </div>
          
          <!-- Oil Paint Effect -->
          <div class="bg-white p-4 rounded-xl shadow-lg">
            <h3 class="text-lg font-semibold mb-3">Oil Paint</h3>
            <CloudinaryImage
              publicId="pour-the-port/logos/USDA_Certified_BioBased"
              alt="USDA logo with oil paint effect"
              width={300}
              height={300}
              oilPaint={40}
              crop="fill"
              class="rounded-lg mb-3"
            />
            <code class="text-xs bg-gray-100 p-1 rounded block">oilPaint={40}</code>
          </div>
          
        </div>
      </section>

      <!-- Avatar Component Examples -->
      <section class="mb-20">
        <h2 class="text-4xl font-bold text-gray-900 mb-8">CloudinaryAvatar Component</h2>
        
        <div class="bg-white p-8 rounded-xl shadow-lg">
          <div class="flex flex-wrap items-center gap-8 mb-8">
            
            <!-- Small Avatar -->
            <div class="text-center">
              <CloudinaryAvatar
                publicId="pour-the-port/logos/USDA_Certified_BioBased"
                alt="USDA logo avatar"
                size={64}
                ring={true}
                ringColor="ring-blue-500"
                class="mb-2"
              />
              <p class="text-sm text-gray-600">Small (64px)</p>
            </div>
            
            <!-- Medium Avatar -->
            <div class="text-center">
              <CloudinaryAvatar
                publicId="pour-the-port/logos/national-parks-service"
                alt="National Parks avatar"
                size={96}
                ring={true}
                ringColor="ring-green-500"
                interactive={true}
                class="mb-2"
              />
              <p class="text-sm text-gray-600">Medium (96px)</p>
            </div>
            
            <!-- Large Avatar -->
            <div class="text-center">
              <CloudinaryAvatar
                publicId="pour-the-port/logos/university-of-georgia"
                alt="University logo avatar"
                size={128}
                ring={true}
                ringColor="ring-purple-500"
                skeleton={true}
                class="mb-2"
              />
              <p class="text-sm text-gray-600">Large (128px)</p>
            </div>
            
          </div>
          
          <code class="text-sm bg-gray-100 p-4 rounded block overflow-x-auto">
            &lt;CloudinaryAvatar publicId="samples/people/jazz" alt="Jazz musician" size={64} ring={true} ringColor="ring-blue-500" /&gt;
          </code>
        </div>
      </section>

      <!-- Gallery Component Example -->
      <section class="mb-20">
        <h2 class="text-4xl font-bold text-gray-900 mb-8">CloudinaryGallery Component</h2>
        
        <CloudinaryGallery
          images={sampleImages}
          title="Sample Image Gallery"
          layout="grid"
          columns={3}
          gap="md"
          lightbox={true}
          captions={true}
          enableFiltering={true}
          class="bg-white p-8 rounded-xl shadow-lg"
        />
      </section>

      <!-- Preset Examples -->
      <section class="mb-20">
        <h2 class="text-4xl font-bold text-gray-900 mb-8">Preset Configurations</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          
          <!-- Hero Preset -->
          <div class="bg-white p-6 rounded-xl shadow-lg">
            <h3 class="text-xl font-semibold mb-4">Hero Preset</h3>
            <CloudinaryImage
              publicId="pour-the-port/septic_l9n82v"
              alt="Hero background"
              preset="hero"
              width={400}
              height={200}
              class="rounded-lg mb-4"
            />
            <code class="text-sm bg-gray-100 p-2 rounded block">
              preset="hero"
            </code>
          </div>
          
          <!-- Product Preset -->
          <div class="bg-white p-6 rounded-xl shadow-lg">
            <h3 class="text-xl font-semibold mb-4">Product Preset</h3>
            <CloudinaryImage
              publicId="pour-the-port/Pour_the_Port_product"
              alt="Product showcase"
              preset="product"
              width={400}
              height={400}
              class="rounded-lg mb-4"
            />
            <code class="text-sm bg-gray-100 p-2 rounded block">
              preset="product"
            </code>
          </div>
          
          <!-- Thumbnail Preset -->
          <div class="bg-white p-6 rounded-xl shadow-lg">
            <h3 class="text-xl font-semibold mb-4">Thumbnail Preset</h3>
            <CloudinaryImage
              publicId="pour-the-port/logos/USDA_Certified_BioBased"
              alt="USDA logo thumbnail"
              preset="thumbnail"
              width={200}
              height={200}
              class="rounded-lg mb-4 mx-auto block"
            />
            <code class="text-sm bg-gray-100 p-2 rounded block">
              preset="thumbnail"
            </code>
          </div>
          
        </div>
      </section>

      <!-- Performance Features -->
      <section class="mb-20">
        <h2 class="text-4xl font-bold text-gray-900 mb-8">Performance Features</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          
          <!-- DPR Support -->
          <div class="bg-white p-6 rounded-xl shadow-lg">
            <h3 class="text-xl font-semibold mb-4">Device Pixel Ratio Support</h3>
            <CloudinaryImage
              publicId="pour-the-port/Pour_the_Port_product"
              alt="High-DPI product image"
              width={400}
              height={300}
              supportDpr={true}
              responsive={true}
              sizes="(max-width: 768px) 100vw, 50vw"
              class="rounded-lg mb-4"
            />
            <code class="text-sm bg-gray-100 p-2 rounded block">
              supportDpr={true}
            </code>
            <p class="text-sm text-gray-600 mt-2">
              Automatically serves 2x, 3x images for high-density displays
            </p>
          </div>
          
          <!-- Skeleton Loading -->
          <div class="bg-white p-6 rounded-xl shadow-lg">
            <h3 class="text-xl font-semibold mb-4">Skeleton Loading</h3>
            <CloudinaryImage
              publicId="pour-the-port/logos/national-parks-service"
              alt="Skeleton loading logo"
              width={400}
              height={300}
              skeleton={true}
              loading="lazy"
              class="rounded-lg mb-4"
            />
            <code class="text-sm bg-gray-100 p-2 rounded block">
              skeleton={true}
            </code>
            <p class="text-sm text-gray-600 mt-2">
              Shows animated skeleton while image loads
            </p>
          </div>
          
        </div>
      </section>

      <!-- Integration Patterns -->
      <section class="mb-20">
        <h2 class="text-4xl font-bold text-gray-900 mb-8">Integration Patterns</h2>
        
        <!-- Card with Image -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-8">
          <div class="md:flex">
            <div class="md:w-1/3">
              <CloudinaryImage
                publicId="pour-the-port/Pour_the_Port_product"
                alt="Pour the PORT product showcase"
                width={400}
                height={300}
                crop="fill"
                quality="auto:good"
                responsive={true}
                sizes="(max-width: 768px) 100vw, 33vw"
                class="w-full h-64 md:h-full object-cover"
              />
            </div>
            <div class="md:w-2/3 p-8">
              <h3 class="text-2xl font-bold text-gray-900 mb-4">Product Card Integration</h3>
              <p class="text-gray-600 mb-6">
                Seamlessly integrate CloudinaryImage into cards, product displays, and content layouts.
                The component handles responsive images, lazy loading, and error states automatically.
              </p>
              <button class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-lg transition-colors">
                Learn More
              </button>
            </div>
          </div>
        </div>
        
        <!-- Background Integration -->
        <div class="relative rounded-xl overflow-hidden h-64 mb-8">
          <CloudinaryImage
            publicId="pour-the-port/septic_l9n82v"
            alt="Septic system background"
            width={1200}
            height={400}
            crop="fill"
            quality="auto:good"
            class="absolute inset-0 w-full h-full object-cover"
          />
          <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
            <div class="text-center text-white">
              <h3 class="text-3xl font-bold mb-4">Background Integration</h3>
              <p class="text-lg">Using CloudinaryImage for background overlays and hero sections</p>
            </div>
          </div>
        </div>
        
        <!-- Grid Layout -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <CloudinaryImage
            publicId="pour-the-port/Pour_the_Port_product"
            alt="Product image 1"
            width={300}
            height={200}
            crop="fill"
            class="rounded-lg"
          />
          <CloudinaryImage
            publicId="pour-the-port/logos/USDA_Certified_BioBased"
            alt="USDA certification"
            width={300}
            height={200}
            crop="fill"
            class="rounded-lg"
          />
          <CloudinaryImage
            publicId="pour-the-port/logos/national-parks-service"
            alt="National Parks logo"
            width={300}
            height={200}
            crop="fill"
            class="rounded-lg"
          />
        </div>
      </section>

      <!-- Code Examples -->
      <section class="mb-20">
        <h2 class="text-4xl font-bold text-gray-900 mb-8">Implementation Examples</h2>
        
        <div class="bg-gray-900 text-white p-6 rounded-xl overflow-x-auto">
          <pre class="text-sm"><code>{`// Basic Usage
<CloudinaryImage
  publicId="your-image-id"
  alt="Description"
  width={600}
  height={400}
/>

// With Effects and Responsive
<CloudinaryImage
  publicId="your-image-id"
  alt="Description"
  width={800}
  height={600}
  responsive={true}
  sizes="(max-width: 768px) 100vw, 50vw"
  blur={50}
  brightness={10}
  contrast={20}
  loading="lazy"
  placeholder={true}
/>

// Avatar Component
<CloudinaryAvatar
  publicId="user-profile-id"
  alt="User avatar"
  size={96}
  ring={true}
  ringColor="ring-blue-500"
  interactive={true}
/>

// Hero Section
<CloudinaryHero
  publicId="hero-background-id"
  alt="Hero background"
  overlayOpacity={40}
  contentAlign="center"
>
  <h1>Your Hero Content</h1>
</CloudinaryHero>

// Gallery
<CloudinaryGallery
  images={galleryImages}
  layout="grid"
  columns={3}
  lightbox={true}
  enableFiltering={true}
/>`}</code></pre>
        </div>
      </section>

    </div>
  </main>
</Layout>

<style>
  /* Custom animations for demo */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animate-fadeIn {
    animation: fadeIn 0.6s ease-out;
  }
  
  /* Code syntax highlighting */
  code {
    font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
  }
  
  /* Smooth scrolling for navigation */
  html {
    scroll-behavior: smooth;
  }
</style>