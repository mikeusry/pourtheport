      <!-- Environmental Impact -->
      <section class="mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">🌍 Real Environmental Impact</h2>
        
        <div class="bg-gradient-to-r from-green-50 to-blue-50 rounded-lg p-8">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
            <div>
              <div class="bg-green-500 text-white rounded-full w-16 h-16 flex items-center justify-center text-2xl font-bold mx-auto mb-4">0</div>
              <h3 class="text-xl font-bold text-gray-800 mb-2">Zero Pollution</h3>
              <p class="text-gray-600">No harmful chemicals enter groundwater</p>
            </div>
            
            <div>
              <div class="bg-blue-500 text-white rounded-full w-16 h-16 flex items-center justify-center text-2xl font-bold mx-auto mb-4">95%</div>
              <h3 class="text-xl font-bold text-gray-800 mb-2">Bio-based Content</h3>
              <p class="text-gray-600">Made from renewable biological materials</p>
            </div>
            
            <div>
              <div class="bg-brand-primary-green text-white rounded-full w-16 h-16 flex items-center justify-center text-2xl font-bold mx-auto mb-4">10+</div>
              <h3 class="text-xl font-bold text-gray-800 mb-2">Years Proven</h3>
              <p class="text-gray-600">Safe use in protected environments</p>
            </div>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="bg-green-600 text-white rounded-lg p-8 text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Ready to Go Natural?</h2>
        <p class="text-xl mb-6">
          Join the eco-conscious homeowners protecting their septic systems and the environment.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <ShopifyBuyButton 
            text="Get Natural Treatment"
            size="lg"
            style="secondary"
            class="min-w-48"
          />
          <a href="/septic-tank-bacteria/" class="text-green-100 hover:text-white underline">
            Learn More About Bacterial Science
          </a>
        </div>
      </section>

      <!-- Related Articles -->
      <section>
        <h2 class="text-3xl font-bold text-gray-900 mb-6">📚 Related Resources</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <a href="/septic-tank-maintenance-guide/" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
            <h3 class="text-xl font-semibold text-gray-800 mb-2">Maintenance Guide</h3>
            <p class="text-gray-600 text-sm">Complete natural maintenance schedule and tips</p>
          </a>
          
          <a href="/septic-tank-bacteria/" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
            <h3 class="text-xl font-semibold text-gray-800 mb-2">Bacterial Science</h3>
            <p class="text-gray-600 text-sm">How natural bacteria keep your septic system healthy</p>
          </a>
          
          <a href="/septic-treatment-vs-pumping/" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
            <h3 class="text-xl font-semibold text-gray-800 mb-2">Treatment vs Pumping</h3>
            <p class="text-gray-600 text-sm">Environmental comparison of maintenance approaches</p>
