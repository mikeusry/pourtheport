---
import CloudinaryImage from './CloudinaryImage.astro';
import { buildCloudinaryUrl } from '../lib/cloudinary';

// Cloudinary public IDs  
const heroBackgroundId = 'pour-the-port/nature-mountains'; // Nature mountains background for hero
const productImageId = 'pour-the-port/Pour_the_Port_product';

// Generate background URL for CSS
const heroBackgroundUrl = buildCloudinaryUrl(heroBackgroundId, {
  width: 1920,
  height: 1080,
  crop: 'fill',
  quality: 'auto:good',
  fetchFormat: 'auto'
});
---

<section class="relative min-h-screen overflow-hidden">
  <!-- Hero Background Image with Cloudinary optimization -->
  <div 
    class="absolute inset-0 bg-cover bg-center bg-no-repeat"
    style={`background-image: url('${heroBackgroundUrl}');`}
  >
    <div class="absolute inset-0 bg-black/60"></div>
  </div>
  
  <div class="relative container mx-auto px-4 py-20 lg:py-32 min-h-screen flex items-center">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        
        <!-- Left Column: Content -->
        <div class="text-center lg:text-left text-white">
          <div class="mb-8 animate-fade-in">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
              Port Septic Tank Treatment: Prevent
              <span class="text-yellow-300">$15,000 in Septic Disasters</span>
              <br/>for Just <span class="text-green-300">$84/Year</span>
            </h1>
            <p class="text-xl md:text-2xl mb-8 text-gray-100 leading-relaxed">
              USDA Certified BiobasedÂ® Pour the PORT septic tank treatment. 
              Trusted by National Parks for 10+ years to protect septic systems naturally.
            </p>
          </div>

          <div class="flex flex-col sm:flex-row justify-center lg:justify-start items-center gap-6 mb-12">
            <a 
              href="#pricing" 
              class="bg-green-500 hover:bg-green-600 text-white font-bold py-4 px-8 rounded-full text-lg transition-all duration-300 transform hover:scale-105 shadow-2xl"
            >
              Get Protected Now - $84/Year
            </a>
            <a 
              href="/product" 
              class="border-2 border-white text-white hover:bg-white hover:text-green-600 font-bold py-4 px-8 rounded-full text-lg transition-all duration-300"
            >
              Product Details
            </a>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center lg:text-left max-w-2xl mx-auto lg:mx-0">
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20">
              <div class="text-3xl font-bold text-yellow-300 mb-2">3x</div>
              <div class="text-sm text-gray-200">Applications per year</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20">
              <div class="text-3xl font-bold text-green-300 mb-2">10+</div>
              <div class="text-sm text-gray-200">Years trusted by National Parks</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20">
              <div class="text-3xl font-bold text-blue-300 mb-2">100%</div>
              <div class="text-sm text-gray-200">Natural bacterial treatment</div>
            </div>
          </div>
        </div>

        <!-- Right Column: Product Image -->
        <div class="flex justify-center lg:justify-end">
          <div class="relative max-w-lg w-full">
            <!-- Main Product Image -->
            <div class="relative z-10">
              <CloudinaryImage
                publicId={productImageId}
                alt="Pour the PORT septic tank treatment - monthly bacterial septic system maintenance"
                preset="product"
                width={600}
                height={600}
                loading="eager"
                fetchpriority="high"
                quality="auto"
                format="webp"
                responsive={true}
                sizes="(max-width: 768px) 300px, 600px"
                class="product-showcase rounded-2xl shadow-2xl"
              />
            </div>
            
            <!-- Trust Badges -->
            <div class="absolute -top-6 -right-6 bg-green-600 text-white px-4 py-2 rounded-full text-sm font-bold shadow-lg z-20" role="img" aria-label="USDA Certified Biobased product">
              USDA Certified
            </div>
            
            <div class="absolute -bottom-6 -left-6 bg-blue-600 text-white px-4 py-2 rounded-full text-sm font-bold shadow-lg z-20" role="img" aria-label="Trusted by organizations for over 10 years">
              Trusted 10+ Years
            </div>

            <!-- Decorative Elements -->
            <div class="absolute -inset-4 bg-gradient-to-r from-green-400 to-blue-500 rounded-2xl opacity-20 blur-xl" aria-hidden="true"></div>
          </div>
        </div>

      </div>

      <!-- Scroll Indicator -->
      <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce">
        <svg class="w-8 h-8 text-white/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </div>
  </div>

  <!-- Floating Background Elements -->
  <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-white/10 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-green-300/20 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 left-1/4 w-32 h-32 bg-blue-300/10 rounded-full blur-2xl"></div>
  </div>
</section>

<style>
  .hero-background img {
    object-position: center;
    filter: contrast(1.1) saturate(1.2);
  }
  
  .product-showcase {
    transition: transform 0.3s ease;
  }
  
  .product-showcase:hover {
    transform: scale(1.05) rotate(1deg);
  }
  
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    animation: fade-in 1s ease-out;
  }

  @media (max-width: 1024px) {
    .product-showcase:hover {
      transform: none;
    }
  }
</style>