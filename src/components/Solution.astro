---
import { buildCloudinaryUrl } from '../lib/cloudinary';

// Hex background for this section positioned to the right
const hexBackgroundId = 'Southland Website/hex';
const hexBackgroundUrl = buildCloudinaryUrl(hexBackgroundId, {
  width: 800,
  height: 600,
  crop: 'fit',
  quality: 'auto:good',
  fetchFormat: 'auto'
});
