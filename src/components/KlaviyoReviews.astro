<script define:vars={{ klaviyoApiKey, isProduction }}>
document.addEventListener('DOMContentLoaded', function() {
  if (!klaviyoApiKey || klaviyoApiKey === 'your-klaviyo-api-key-here') {
    if (!isProduction) {
      console.log('üîç Klaviyo Reviews: Disabled - API key not configured');
    }
    return;
  }

  // Wait for Klaviyo to load
  let klaviyoRetries = 0;
  const maxRetries = 10;
  
  function waitForKlaviyo() {
    if (typeof window.klaviyo !== 'undefined') {
      // Klaviyo is loaded, initialize reviews
      if (!isProduction) {
        console.log('üìä Klaviyo Reviews: Initialized successfully');
      }
      
      // Track reviews interactions for GA4
      if (typeof gtag !== 'undefined') {
        // Listen for review widget interactions
        document.addEventListener('click', function(e) {
          if (e.target.closest('.klaviyo-star-rating-widget') || 
              e.target.closest('#klaviyo-reviews-all')) {
            gtag('event', 'klaviyo_review_interaction', {
              event_category: 'engagement',
              event_label: 'review_widget_click'
            });
          }
        });
      }
      
    } else if (klaviyoRetries < maxRetries) {
      klaviyoRetries++;
      setTimeout(waitForKlaviyo, 500);
    } else {
      if (!isProduction) {
        console.warn('‚ö†Ô∏è Klaviyo Reviews: Failed to load after 5 seconds');
      }
    }
  }
  
  // Start checking for Klaviyo
  waitForKlaviyo();
});
</script>

