---
const klaviyoApiKey = import.meta.env.PUBLIC_KLAVIYO_API_KEY;
const productId = import.meta.env.PUBLIC_SHOPIFY_PRODUCT_ID || '9943643023';
const isProduction = import.meta.env.PROD;

// Only load Klaviyo if API key is properly configured (should start with 'pk_' and be at least 20 chars)
const enableKlaviyo = klaviyoApiKey &&
  klaviyoApiKey !== 'your-klaviyo-api-key-here' &&
  klaviyoApiKey.startsWith('pk_') &&
  klaviyoApiKey.length > 20;
---

{enableKlaviyo && (
  <>
    <!-- Klaviyo.js Script - Deferred Loading -->
    <script type="text/javascript">
      // Load Klaviyo after user interaction or after 4 seconds
      let klaviyoLoaded = false;
      function loadKlaviyo() {
        if (klaviyoLoaded) return;
        klaviyoLoaded = true;
        
        const script = document.createElement('script');
        script.type = 'text/javascript';
        script.async = true;
        script.src = `https://static.klaviyo.com/onsite/js/${klaviyoApiKey}/klaviyo.js`;
        document.head.appendChild(script);
        console.log('üìß Klaviyo reviews loaded');
      }
      
      // Load on scroll to reviews section or after timeout
      const observer = new IntersectionObserver((entries) => {
        if (entries[0].isIntersecting) {
          loadKlaviyo();
          observer.disconnect();
        }
      });
      
      document.addEventListener('DOMContentLoaded', () => {
        const reviewsContainer = document.querySelector('.klaviyo-reviews-container');
        if (reviewsContainer) observer.observe(reviewsContainer);
      });
      
      // Fallback: load after 4 seconds
      setTimeout(loadKlaviyo, 4000);
    </script>
    
    <!-- Reviews Container -->
    <div class="klaviyo-reviews-container">
      <!-- Star Rating Widget -->
      <div class="klaviyo-star-rating-widget" 
           data-id={productId} 
           data-product-title="Pour the PORT Septic Treatment" 
           data-product-type="septic_maintenance">
      </div>
      
      <!-- Reviews Summary and List Combined -->
      <div id="klaviyo-reviews-all" data-id={productId}></div>
    </div>
  </>
)}

