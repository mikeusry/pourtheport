---
import CloudinaryImage from './CloudinaryImage.astro';

// Trust logos data array with correct public IDs
const trustLogos = [
  {
    publicId: 'pour-the-port/logos/NPS_768_mqklvq',
    alt: 'National Parks Service logo'
  },
  {
    publicId: 'pour-the-port/logos/JoshuaTree',
    alt: 'Joshua Tree National Park logo'
  },
  {
    publicId: 'pour-the-port/logos/Georgia-State-Parks_ddirbg',
    alt: 'Georgia State Parks logo'
  },
  {
    publicId: 'pour-the-port/logos/BLM_hy8gev',
    alt: 'Bureau of Land Management logo'
  },
  {
    publicId: 'pour-the-port/logos/UGA_xkrnsx',
    alt: 'University of Georgia logo'
  },
  {
    publicId: 'pour-the-port/logos/USFS_mhiaqm',
    alt: 'US Forest Service logo'
  },
  {
    publicId: 'pour-the-port/logos/colorado_tw78fk',
    alt: 'Colorado Parks logo'
  }
];
---

<section class="py-16 bg-gray-50">
  <div class="w-full">
    <div class="container mx-auto px-4 mb-12">
      <div class="max-w-6xl mx-auto">
      
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
          Trusted by Leading Organizations for Over a Decade
        </h2>
        <p class="text-lg text-gray-600">
          PORT has been trusted by US National Parks like Joshua Tree for over a decade. 
          Now you can experience the same high-quality, safe product in your own home.
        </p>
      </div>
      </div>
    </div>

    <!-- Scrolling Logo Carousel - Full Browser Width -->
    <div class="w-full">
      <div class="logo-carousel-container overflow-hidden mb-16">
        <div class="logo-carousel-track">
          <!-- First set of all 5 logos -->
          {trustLogos.map((logo) => (
            <div class="trust-logo">
              <CloudinaryImage
                publicId={logo.publicId}
                alt={logo.alt}
                width={160}
                height={90}
                preset="thumbnail"
                loading="eager"
                class="max-w-full max-h-full object-contain"
              />
            </div>
          ))}

          <!-- Duplicate set for seamless loop -->
          {trustLogos.map((logo) => (
            <div class="trust-logo">
              <CloudinaryImage
                publicId={logo.publicId}
                alt={logo.alt}
                width={160}
                height={90}
                preset="thumbnail"
                loading="eager"
                class="max-w-full max-h-full object-contain"
              />
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Rest of content back in container -->
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="bg-white rounded-xl shadow-lg p-8 md:p-12">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 text-center">
          
          <div class="border-r border-gray-200 last:border-r-0 lg:border-r lg:last:border-r-0 md:border-r-0">
            <div class="text-3xl font-bold text-green-600 mb-2">10+</div>
            <div class="text-sm text-gray-600 uppercase tracking-wide font-semibold">Years Trusted</div>
            <div class="text-xs text-gray-500 mt-1">by National Parks</div>
          </div>

          <div class="border-r border-gray-200 last:border-r-0 lg:border-r lg:last:border-r-0 md:border-r">
            <div class="text-3xl font-bold text-blue-600 mb-2">100%</div>
            <div class="text-sm text-gray-600 uppercase tracking-wide font-semibold">Natural</div>
            <div class="text-xs text-gray-500 mt-1">USDA Certified</div>
          </div>

          <div class="border-r border-gray-200 last:border-r-0 lg:border-r lg:last:border-r-0 md:border-r-0">
            <div class="text-3xl font-bold text-purple-600 mb-2">3x</div>
            <div class="text-sm text-gray-600 uppercase tracking-wide font-semibold">Per Year</div>
            <div class="text-xs text-gray-500 mt-1">Simple Application</div>
          </div>

          <div>
            <div class="text-3xl font-bold text-orange-600 mb-2">$84</div>
            <div class="text-sm text-gray-600 uppercase tracking-wide font-semibold">Annual Cost</div>
            <div class="text-xs text-gray-500 mt-1">vs $15K+ disasters</div>
          </div>

        </div>
      </div>

      <div class="mt-12 bg-gradient-to-r from-green-500 to-blue-600 rounded-xl p-8 text-white text-center">
        <h3 class="text-2xl font-bold mb-4">
          Join Thousands of Protected Homes & Facilities
        </h3>
        <p class="text-lg mb-6 text-green-100">
          When professional organizations trust their critical systems to Pour the PORT, 
          you know you're making the right choice for your home.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <div class="flex items-center justify-center">
            <svg class="w-5 h-5 text-green-300 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>Environmentally Responsible</span>
          </div>
          <div class="flex items-center justify-center">
            <svg class="w-5 h-5 text-green-300 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>Scientifically Proven</span>
          </div>
          <div class="flex items-center justify-center">
            <svg class="w-5 h-5 text-green-300 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>Decade of Trust</span>
          </div>
        </div>
      </div>

      </div>
    </div>
  </div>
</section>

<style>
  .logo-carousel-container {
    width: 100%;
    padding: 20px 0;
  }
  
  .logo-carousel-track {
    display: flex;
    align-items: center;
    gap: 80px;
    animation: scroll 35s linear infinite;
    width: max-content;
  }
  
  .trust-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 90px;
    min-width: 180px;
    flex-shrink: 0;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }
  
  .trust-logo:hover {
    opacity: 1;
  }
  
  .trust-logo img {
    max-width: 160px;
    max-height: 90px;
    object-fit: contain;
    display: block;
  }
  
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  /* Pause animation on hover */
  .logo-carousel-container:hover .logo-carousel-track {
    animation-play-state: paused;
  }
</style>