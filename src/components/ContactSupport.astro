---
import ContactModal from './ContactModal.astro';
---

<!-- Contact Support Section -->
<section id="contact-support" class="py-16 bg-gradient-to-br from-gray-50 to-blue-50 border-t border-gray-200">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Still Have <span class="text-green-600">Questions?</span>
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Our septic system experts are here to help. Contact us directly for personalized advice about protecting your specific system.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-3xl mx-auto">
        
        <!-- Phone Support Card -->
        <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300">
          <div class="text-center">
            <div class="bg-blue-500 text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Call Our Experts</h3>
            <p class="text-gray-600 mb-4">Speak directly with a septic specialist</p>
            <a 
              href="tel:18006083755" 
              class="inline-flex items-center bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded-full transition-all duration-300 transform hover:scale-105 shadow-md"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              1-800-608-3755
            </a>
            <div class="mt-3 text-sm text-gray-500">
              Available Mon-Fri 8AM-5PM EST
            </div>
          </div>
        </div>

        <!-- Email Support Card -->
        <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300">
          <div class="text-center">
            <div class="bg-green-500 text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Email Our Team</h3>
            <p class="text-gray-600 mb-4">Get personalized written advice</p>
            <button 
              onclick="window.openContactModal()" 
              class="inline-flex items-center bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-full transition-all duration-300 transform hover:scale-105 shadow-md"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              Send Message
            </button>
            <div class="mt-3 text-sm text-gray-500">
              Response within 24 hours
            </div>
          </div>
        </div>

      </div>

      <!-- Trust & Reassurance -->
      <div class="mt-12 text-center">
        <div class="bg-white rounded-xl p-6 shadow-md border border-gray-100 max-w-2xl mx-auto">
          <div class="flex items-center justify-center mb-4">
            <div class="bg-green-100 text-green-600 w-12 h-12 rounded-full flex items-center justify-center mr-3">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.031 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <div class="text-left">
              <h4 class="font-bold text-gray-900">Trusted Expertise</h4>
              <p class="text-sm text-gray-600">Used by National Parks & backed by University research</p>
            </div>
          </div>
          <p class="text-gray-600 text-sm">
            Our team has helped thousands of homeowners protect their septic systems. 
            Get the same expert guidance that's trusted by professionals nationwide.
          </p>
        </div>
      </div>

    </div>
  </div>
</section>

<!-- Include the Contact Modal -->
<ContactModal />

