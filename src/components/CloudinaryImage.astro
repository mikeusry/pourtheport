---
import { Image } from 'astro:assets';
import { getOptimizedImage } from '../utils/cloudinary.js';

export interface Props {
  publicId: string;
  alt: string;
  width?: number;
  height?: number;
  className?: string;
  loading?: 'lazy' | 'eager';
  quality?: string;
  crop?: string;
}

const { 
  publicId, 
  alt, 
  width = 800, 
  height, 
  className = '', 
  loading = 'lazy',
  quality = 'auto',
  crop = 'fill'
} = Astro.props;

// Generate optimized image URL
const imageUrl = getOptimizedImage(publicId, { width, height, quality, crop });
---

<Image
  src={imageUrl}
  alt={alt}
  width={width}
  height={height}
  loading={loading}
  class={className}
/>